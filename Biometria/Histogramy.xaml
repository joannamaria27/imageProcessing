<Window x:Class="Biometria.Histogramy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:Biometria"
        mc:Ignorable="d"
        Title="Histogramy" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Histogramy">
                    <MenuItem Header="_rozciągnięcie" />
                    <MenuItem Header="_wyrównanie"/>
                </MenuItem>
            </Menu>
        </DockPanel>

        <lvc:CartesianChart x:Name="chart1" Series="{Binding series1}" LegendLocation="Right" >
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="wartosc" MinValue="0"></lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="liczba pixeli" MinValue="0" ></lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

