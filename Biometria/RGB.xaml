<Window xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  x:Class="Biometria.RGB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biometria"
        mc:Ignorable="d"
        Title="RGB" Height="370" Width="290">
    <Grid>
        <StackPanel >
            <xctk:ColorCanvas  Name="pickerColor" HorizontalAlignment="Center" VerticalAlignment="Center" />

        </StackPanel>
        <StackPanel Margin="0,290,0,10">
            <Button Content="Zatwierdz kolor dla wybranego pixela" HorizontalAlignment="Center" VerticalAlignment="Top" Width="auto" Click="WyborKoloru" />

        </StackPanel>

    </Grid>
</Window>
